{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".nvmrc", "pnpm-lock.yaml", "version.json"],
  "ui": "tui",
  "daemon": true,
  "remoteCache": {
    "enabled": true
  },
  "globalPassThroughEnv": [
    "SENTRY_AUTH_TOKEN",
    "DOPPLER_PROJECT",
    "DOPPLER_ENVIRONMENT",
    "DOPPLER_CONFIG"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!**/*.test.{ts,tsx}",
        "!**/*.spec.{ts,tsx}",
        "!**/*.stories.{ts,tsx,mdx}",
        "!**/tests/**",
        "!**/__tests__/**",
        "!**/coverage/**",
        "!**/playwright-report/**"
      ],
      "outputs": [
        ".next/standalone/**",
        ".next/static/**",
        ".next/server/**",
        ".next/*.json",
        ".next/BUILD_ID",
        "!.next/cache/**",
        "dist/**"
      ],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_*",
        "VERCEL_*",
        "CLERK_*",
        "STRIPE_*",
        "SENTRY_*",
        "STATSIG_*",
        "NEON_*",
        "DATABASE_URL",
        "DATABASE_URL_MAIN",
        "SPOTIFY_*",
        "CLOUDINARY_*",
        "RESEND_*",
        "MERCURY_*",
        "REVENUECAT_*",
        "FLAGS_*",
        "EXPERIMENTATION_*",
        "BLOB_*",
        "CRON_*",
        "GITLEAKS_LICENSE"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "biome.json",
        "eslint.config.js",
        ".eslintrc*"
      ],
      "outputs": [".cache/eslint/**"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "biome.json",
        "eslint.config.js",
        ".eslintrc*"
      ],
      "outputs": [],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json", "tsconfig.*.json"],
      "outputs": [".cache/tsbuildinfo"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "interruptible": true
    },
    "test": {
      "dependsOn": [],
      "inputs": ["$TURBO_DEFAULT$", "vitest.config.*", "tests/**"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV", "CI"]
    },
    "test:fast": {
      "dependsOn": [],
      "inputs": ["$TURBO_DEFAULT$", "vitest.config.*", "tests/**"],
      "outputs": [],
      "env": ["NODE_ENV", "CI"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", "playwright.config.*", "tests/e2e/**"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "env": ["NODE_ENV", "CI", "PLAYWRIGHT_*", "BASE_URL"]
    },
    "e2e:smoke": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", "playwright.config.*", "tests/e2e/**"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "env": ["NODE_ENV", "CI", "SMOKE_ONLY", "BASE_URL", "PLAYWRIGHT_*"]
    },
    "format": {
      "inputs": ["$TURBO_DEFAULT$", "biome.json"],
      "outputs": [],
      "cache": false
    },
    "format:check": {
      "inputs": ["$TURBO_DEFAULT$", "biome.json"],
      "outputs": []
    },
    "drizzle:generate": {
      "inputs": ["drizzle/**", "lib/db/schema/**"],
      "outputs": ["drizzle/migrations/**"],
      "cache": false
    },
    "drizzle:check": {
      "inputs": ["drizzle/**", "lib/db/schema/**"],
      "outputs": []
    },
    "storybook": {
      "cache": false,
      "persistent": true,
      "interruptible": true
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".storybook/**",
        "**/*.stories.{ts,tsx,mdx}"
      ],
      "outputs": ["storybook-static/**"]
    }
  }
}
