{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "remoteCache": {
    "enabled": true
  },
  "globalPassThroughEnv": [
    "SENTRY_AUTH_TOKEN",
    "DOPPLER_PROJECT",
    "DOPPLER_ENVIRONMENT",
    "DOPPLER_CONFIG"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/standalone/**",
        ".next/static/**",
        ".next/server/**",
        ".next/*.json",
        ".next/BUILD_ID",
        "!.next/cache/**",
        "dist/**"
      ],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_*",
        "VERCEL_*",
        "CLERK_*",
        "STRIPE_*",
        "SENTRY_*",
        "STATSIG_*",
        "NEON_*",
        "DATABASE_URL",
        "DATABASE_URL_MAIN",
        "SPOTIFY_*",
        "CLOUDINARY_*",
        "RESEND_*",
        "MERCURY_*",
        "REVENUECAT_*",
        "FLAGS_*",
        "EXPERIMENTATION_*",
        "BLOB_*",
        "CRON_*",
        "GITLEAKS_LICENSE"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": [".cache/tsbuildinfo"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV", "CI"]
    },
    "test:fast": {
      "dependsOn": [],
      "outputs": [],
      "env": ["NODE_ENV", "CI"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "env": ["NODE_ENV", "CI", "PLAYWRIGHT_*"]
    },
    "e2e:smoke": {
      "dependsOn": ["^build"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "env": ["NODE_ENV", "CI", "SMOKE_ONLY", "BASE_URL", "PLAYWRIGHT_*"]
    },
    "format": {
      "outputs": []
    },
    "format:check": {
      "outputs": []
    }
  }
}
