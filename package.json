{
  "name": "jovie",
  "version": "0.1.0",
  "private": true,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=20.17",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "overrides": {
      "parse5": "7.1.2",
      "jws": "4.0.1",
      "path-to-regexp": ">=8.0.0",
      "esbuild": ">=0.25.0",
      "cookie": ">=1.0.0",
      "tmp": ">=0.2.3",
      "vite": "^6.3.5",
      "drizzle-orm": "0.45.0"
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --max-warnings=0 --cache --cache-location .cache/eslint --cache-strategy content .",
    "lint:fix": "eslint --fix .",
    "typecheck": "tsc -p tsconfig.json --noEmit --incremental --tsBuildInfoFile .cache/tsbuildinfo",
    "pre-push": "pnpm run tailwind:check && pnpm run typecheck && pnpm run lint",
    "check": "pnpm run validate && pnpm run build && pnpm run test",
    "check:ci": "pnpm run validate && pnpm run test:ci",
    "validate": "pnpm run format:check && pnpm run lint && pnpm run typecheck",
    "test": "NODE_OPTIONS=--max-old-space-size=4096 vitest run --config=vitest.config.mts",
    "test:ci": "NODE_OPTIONS=--max-old-space-size=4096 vitest run --config=vitest.config.mts --reporter=verbose --coverage",
    "test:watch": "vitest --config=vitest.config.mts",
    "test:fast": "NODE_OPTIONS=--max-old-space-size=4096 vitest run --config=vitest.config.fast.mts",
    "test:profile": "tsx scripts/test-performance-profiler.ts",
    "test:guard": "tsx scripts/test-performance-guard.ts",
    "test:flaky": "tsx scripts/flaky-test-detector.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:synthetic": "playwright test --config=playwright.synthetic.config.ts",
    "test:e2e:golden-path": "playwright test tests/e2e/golden-path.spec.ts",
    "e2e:smoke": "playwright test -g @smoke",
    "e2e:smoke:noauth": "playwright test -g @smoke --config=playwright.config.noauth.ts",
    "e2e:full": "playwright test",
    "e2e:full:noauth": "playwright test --config=playwright.config.noauth.ts",
    "a11y:ci": "playwright test -g @a11y",
    "format": "biome format --write .",
    "format:check": "biome check .",
    "commit": "cz",
    "clean": "rm -rf .next out dist coverage .nyc_output",
    "clean:deps": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "postbuild": "next-sitemap",
    "verify-artist-images": "node scripts/verify-artist-images.js",
    "update-artist-images": "node scripts/update-artist-images.js",
    "ensure-valid-artist-images": "node scripts/ensure-valid-artist-images.js",
    "audit:icons": "node scripts/audit-icons.js",
    "prepare": "husky",
    "danger": "danger ci --fail-on-errors --verbose",
    "db:migrate": "tsx scripts/drizzle-migrate.ts",
    "db:seed": "tsx scripts/drizzle-seed.ts",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "tsx scripts/drizzle-migrate.ts",
    "drizzle:migrate:preview": "GIT_BRANCH=preview tsx scripts/drizzle-migrate.ts",
    "drizzle:migrate:prod": "GIT_BRANCH=production tsx scripts/drizzle-migrate.ts",
    "drizzle:push": "drizzle-kit push",
    "neon:migrate:preview": "tsx scripts/neon-migrate-preview.ts",
    "neon:migrate:preview:compare": "tsx scripts/neon-migrate-preview.ts --compare",
    "neon:migration:status": "tsx scripts/neon-migration-status.ts",
    "neon:init:migration-history": "tsx scripts/neon-init-migration-history.ts",
    "migration:guard": "bash scripts/check-migrations.sh origin/main",
    "migration:validate": "bash scripts/validate-migrations.sh",
    "migration:multi-check": "bash scripts/handle-multiple-migrations.sh --info",
    "migration:allow-multiple": "bash scripts/handle-multiple-migrations.sh --bulk",
    "migration:skip-guard": "bash scripts/handle-multiple-migrations.sh --skip",
    "drizzle:studio": "drizzle-kit studio",
    "drizzle:check": "drizzle-kit check",
    "db:validate": "tsx scripts/validate-db-schema.ts",
    "drizzle:up": "drizzle-kit up",
    "tailwind:check": "node scripts/tailwind-guard.mjs",
    "tailwind:guard": "node scripts/tailwind-guard.mjs",
    "generate": "plop",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "storybook:build": "storybook build",
    "storybook:test": "storybook test --watch=false"
  },
  "dependencies": {
    "@clerk/elements": "0.23.88",
    "@clerk/nextjs": "^6.36.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@floating-ui/react": "^0.27.16",
    "@headlessui/react": "^2.2.8",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@neondatabase/serverless": "^1.0.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/nextjs": "^10",
    "@statsig/react-bindings": "^3.30.0",
    "@statsig/session-replay": "^3.30.0",
    "@statsig/web-analytics": "^3.30.0",
    "@stripe/stripe-js": "^7.8.0",
    "@tanstack/react-table": "^8.21.3",
    "@types/ws": "^8.18.1",
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.4",
    "@vercel/analytics": "^1.5.0",
    "@vercel/blob": "^1.1.1",
    "@vercel/edge-config": "^1.4.0",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "critters": "^0.0.25",
    "date-fns": "^3.2.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.45.0",
    "flags": "^4.0.1",
    "framer-motion": "^11.0.0",
    "import-in-the-middle": "^2.0.0",
    "isomorphic-dompurify": "2.33.0",
    "lucide-react": "^0.556.0",
    "mdast-util-to-string": "^4.0.0",
    "next": "^16.0.7",
    "next-themes": "^0.4.6",
    "postgres": "^3.4.7",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.68.0",
    "recharts": "2.15.4",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "require-in-the-middle": "^8.0.1",
    "resend": "^6.5.2",
    "server-only": "^0.0.1",
    "sharp": "^0.34.5",
    "simple-icons": "^16.1.0",
    "sonner": "^2.0.7",
    "stripe": "^18.5.0",
    "svix": "^1.76.1",
    "tailwind-merge": "^3.3.1",
    "unist-util-visit": "^5.0.0",
    "vaul": "^1.1.2",
    "web-vitals": "^5.1.0",
    "ws": "^8.18.3",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@chromatic-com/storybook": "^4.1.3",
    "@clerk/clerk-js": "^5.113.0",
    "@clerk/dev-cli": "^0.0.12",
    "@clerk/testing": "^1.13.21",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@next/bundle-analyzer": "^16.0.7",
    "@playwright/test": "^1.55.0",
    "@storybook/addon-a11y": "^10.1.4",
    "@storybook/addon-docs": "^10.1.4",
    "@storybook/addon-vitest": "^10.1.4",
    "@storybook/nextjs-vite": "^10.1.4",
    "@storybook/test-runner": "^0.24.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^24",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.42.0",
    "@vercel/toolbar": "^0.1.41",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "danger": "^13.0.4",
    "drizzle-kit": "^0.31.4",
    "drizzle-zod": "^0.8.3",
    "eslint": "^9",
    "eslint-config-next": "^16.0.7",
    "eslint-plugin-storybook": "^10.1.4",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "ignore-loader": "^0.1.2",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.6",
    "next-sitemap": "^4.2.3",
    "plop": "^4.0.2",
    "postcss": "^8",
    "shadcn": "^3.2.1",
    "storybook": "^10.1.4",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "uuid": "^13.0.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "drizzle/migrations/**/*.{sql,ts}": [
      "pnpm migration:validate",
      "pnpm migration:guard"
    ],
    "*.{js,jsx,ts,tsx}": [
      "biome check --fix",
      "biome format --write",
      "eslint --fix --max-warnings=0 --no-warn-ignored"
    ],
    "*.{json,css}": [
      "biome check --fix",
      "biome format --write"
    ],
    "ignore": [
      "app/.well-known/**"
    ]
  }
}
