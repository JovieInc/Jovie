{
  "name": "jovie-monorepo",
  "version": "0.1.0",
  "private": true,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.4",
  "pnpm": {
    "overrides": {
      "parse5": "7.1.2",
      "jws": "4.0.1",
      "path-to-regexp": ">=8.0.0",
      "esbuild": ">=0.25.0",
      "cookie": ">=1.0.0",
      "tmp": ">=0.2.3",
      "vite": "^6.3.5",
      "drizzle-orm": "0.45.1",
      "jsdom": "26.1.0",
      "react": "19.2.4",
      "react-dom": "19.2.4"
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@jovie/web",
    "build": "turbo build",
    "build:web": "turbo build --filter=@jovie/web",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:ci": "turbo test:ci",
    "test:fast": "turbo test:fast",
    "test:e2e": "turbo test:e2e",
    "test:guard": "pnpm --filter=@jovie/web run test:guard",
    "test:profile": "pnpm --filter=@jovie/web run test:profile",
    "test:flaky": "pnpm --filter=@jovie/web run test:flaky",
    "format": "biome format --write .",
    "format:check": "biome check --formatter-enabled=true --linter-enabled=false .",
    "biome:ci": "biome ci .",
    "biome:check": "biome check .",
    "commit": "cz",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky",
    "next:proxy-guard": "pnpm --filter=@jovie/web run next:proxy-guard",
    "pre-push": "biome check . && pnpm --filter=@jovie/web run pre-push",
    "tailwind:check": "pnpm --filter=@jovie/web run tailwind:check"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "turbo": "^2.7.6",
    "typescript": "^5"
  },
  "lint-staged": {
    "apps/web/drizzle/migrations/**/*.{sql,ts}": [
      "pnpm --filter=@jovie/web run migration:validate",
      "pnpm --filter=@jovie/web run migration:guard"
    ],
    "*.{js,jsx,ts,tsx}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "apps/web/**/*.{ts,tsx}": [
      "pnpm --filter=@jovie/web run lint:eslint --max-warnings 0"
    ],
    "apps/web/components/**/*.{tsx,ts}": [
      "pnpm --filter=@jovie/web run a11y:check:staged"
    ],
    "*.{json,css}": [
      "biome format --write --no-errors-on-unmatched"
    ]
  }
}
