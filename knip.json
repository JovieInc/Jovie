{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "exclude": [
    "files",
    "exports",
    "types",
    "nsExports",
    "nsTypes",
    "enumMembers",
    "classMembers",
    "duplicates",
    "unlisted",
    "binaries",
    "unresolved"
  ],
  "workspaces": {
    ".": {},
    "apps/web": {
      "entry": [
        "instrumentation.{ts,js}",
        "next.config.{js,ts}",
        "sentry.*.config.ts"
      ],
      "project": ["**/*.{ts,tsx,js,jsx,mjs}"],
      "ignore": [
        ".next/**",
        "drizzle/migrations/**",
        "drizzle.config.ts",
        ".storybook/**",
        "lib/db/schema/**"
      ],
      "ignoreDependencies": [
        "tw-animate-css",
        "@clerk/backend",
        "@radix-ui/react-alert-dialog",
        "@radix-ui/react-avatar",
        "@radix-ui/react-checkbox",
        "@radix-ui/react-dropdown-menu",
        "@radix-ui/react-label",
        "@radix-ui/react-popover",
        "@radix-ui/react-radio-group",
        "@radix-ui/react-select",
        "@radix-ui/react-switch",
        "@radix-ui/react-tabs",
        "@radix-ui/react-toggle",
        "@radix-ui/react-toggle-group",
        "@radix-ui/react-tooltip"
      ],
      "playwright": {
        "config": [
          "playwright.config.ts",
          "playwright.synthetic.config.ts",
          "playwright.config.nightly.ts",
          "playwright.config.noauth.ts",
          "playwright.config.headed.ts"
        ],
        "entry": ["tests/e2e/**/*.spec.ts"]
      },
      "storybook": {
        "config": [".storybook/main.ts"],
        "entry": ["**/*.stories.{ts,tsx}"]
      },
      "vitest": {
        "config": [
          "vitest.config.mts",
          "vitest.config.ci.mts",
          "vitest.config.fast.mts",
          "vitest.config.minimal.mts",
          "vitest.config.mjs"
        ],
        "entry": ["**/*.test.{ts,tsx}", "**/*.spec.{ts,tsx}"]
      },
      "next": {
        "entry": ["next.config.{js,ts}", "instrumentation.{ts,js}"]
      },
      "eslint": {
        "config": ["eslint.config.js", "eslint-server-boundaries.config.js"]
      },
      "drizzle": false
    },
    "apps/should-i-make": {
      "entry": ["next.config.{js,ts}"],
      "project": ["**/*.{ts,tsx,js,jsx}"],
      "ignore": [".next/**"],
      "ignoreDependencies": ["@fontsource-variable/inter", "tailwindcss"],
      "next": {
        "entry": ["next.config.{js,ts}"]
      }
    },
    "packages/ui": {
      "entry": ["atoms/*.{ts,tsx}", "lib/*.ts", "theme/*.ts"],
      "project": ["**/*.{ts,tsx}"],
      "vitest": {
        "config": ["vitest.config.ts"],
        "entry": ["**/*.test.{ts,tsx}"]
      }
    }
  }
}
