{
  "deno.enablePaths": ["supabase/functions"],
  "deno.lint": true,
  "deno.unstable": [
    "bare-node-builtins",
    "byonm",
    "sloppy-imports",
    "unsafe-proto",
    "webgpu",
    "broadcast-channel",
    "worker-options",
    "cron",
    "kv",
    "ffi",
    "fs",
    "http",
    "net"
  ],
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "doppler.autocomplete.enable": true,
  "doppler.hover.enable": true,
  "sonarlint.connectedMode.project": {
    "connectionId": "jovieinc",
    "projectKey": "JovieInc_Jovie"
  },
  "cascade.hooks": {
    "afterToolCall": [
      {
        "toolName": "Edit",
        "command": "node_modules/.bin/biome check --write ${filePath}",
        "description": "Format and lint with Biome after editing"
      },
      {
        "toolName": "Write",
        "command": "node_modules/.bin/biome check --write ${filePath}",
        "description": "Format and lint with Biome after writing"
      }
    ]
  }
}
