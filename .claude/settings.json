{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS":"1"
  },
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-start.sh",
        "timeout": 120
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/bash-safety-check.sh",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/file-protection-check.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/lint-check.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/typecheck.sh",
            "timeout": 120
          },
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/console-check.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/ts-strict-check.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/file-size-check.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/db-patterns-check.sh",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "mcp__linear__*",
      "mcp__claude_ai_Linear__*",
      "Skill(pr)",
      "Skill(pr:*)",
      "Skill(ship)",
      "Skill(ship:*)",
      "Skill(verify)",
      "Skill(verify:*)",
      "Skill(simplify)",
      "Skill(simplify:*)",
      "Skill(orchestrate)",
      "Skill(orchestrate:*)",
      "Skill(check-migrations)",
      "Skill(check-migrations:*)",
      "Skill(generate-migration)",
      "Skill(generate-migration:*)",
      "Skill(neon-backup)",
      "Skill(neon-backup:*)",
      "Skill(session-start-hook)",
      "Skill(session-start-hook:*)",
      "Skill(sync-permissions)",
      "Skill(sync-permissions:*)",
      "Skill(ideate)",
      "Skill(ideate:*)",
      "Skill(ideate-ui)",
      "Skill(ideate-ui:*)",
      "Skill(ideate-code)",
      "Skill(ideate-code:*)",
      "Skill(ideate-quality)",
      "Skill(ideate-quality:*)",
      "Skill(ideate-perf)",
      "Skill(ideate-perf:*)",
      "Skill(consolidate-ui)",
      "Skill(consolidate-ui:*)",
      "SlashCommand(/pr)",
      "SlashCommand(/verify)",
      "SlashCommand(/ship)",
      "SlashCommand(/simplify)"
    ],
    "deny": [],
    "ask": [],
    "tools": {
      "allow": [
        "ReadFile",
        "ListDir",
        "Search",
        "Edit",
        "WriteFile",
        "CreateFile",
        "RenameFile",
        "Git(status)",
        "Git(diff)",
        "Git(log)"
      ],
      "prompt": [
        "Git(add)",
        "Git(commit)",
        "Git(stash)",
        "Git(rebase)",
        "Git(merge)",
        "Git(push)",
        "Git(pull)"
      ],
      "deny": [
        "OpenNetworkPort",
        "MountVolume",
        "SystemSettings"
      ]
    },
    "paths": {
      "allow": [
        "${WORKSPACE}/**"
      ],
      "deny": [
        "/**/.ssh/**",
        "/**/.gnupg/**",
        "/etc/**",
        "/usr/**",
        "/System/**",
        "/var/**",
        "/bin/**",
        "/sbin/**"
      ]
    },
    "bash": {
      "allow": [
        "pwd",
        "ls *",
        "cat *",
        "head *",
        "tail *",
        "grep *",
        "find *",
        "tree *",
        "wc *",
        "sort *",
        "du *",
        "env",
        "echo *",
        "printf *",
        "test *",
        "[ *",
        "true",
        "false",
        "node *",
        "npm *",
        "npx *",
        "pnpm *",
        "pnpm turbo *",
        "pnpm --filter=* *",
        "pnpm biome *",
        "pnpm vitest *",
        "pnpm test *",
        "pnpm run lint *",
        "pnpm run typecheck *",
        "pnpm run build *",
        "pnpm run tailwind:check *",
        "pnpm format *",
        "pnpm lint *",
        "pnpm typecheck *",
        "pnpm drizzle:check *",
        "pnpm exec tsc *",
        "pnpm exec biome *",
        "pnpm exec vitest *",
        "pnpm exec playwright test *",
        "npx vitest *",
        "biome *",
        "bash -n *",
        "git status",
        "git diff *",
        "git log *",
        "git branch *",
        "git show *",
        "git rev-parse *",
        "git ls-files *",
        "git ls-tree *",
        "git config *",
        "git check-ignore *",
        "git merge-base *",
        "git hash-object *",
        "gh pr view *",
        "gh pr list *",
        "gh pr diff *",
        "gh pr checks *",
        "gh issue view *",
        "gh issue list *",
        "gh run view *",
        "gh run list *",
        "gh run watch *",
        "gh workflow view *",
        "gh workflow list *",
        "gh label *",
        "gh secret list *",
        "gh variable list *",
        "vercel list *",
        "vercel inspect *",
        "vercel logs *",
        "pnpm drizzle-kit generate *",
        "timeout * pnpm *",
        "curl *",
        "jq *",
        "sha256sum *",
        "chmod +x ${WORKSPACE}/.claude/hooks/*",
        "lsof *",
        "uuidgen *",
        "bun *",
        "corepack *",
        "NODE_OPTIONS=* pnpm *",
        "NODE_OPTIONS=* npx *",
        "mkdir *",
        "touch *",
        "cp *",
        "mv *",
        "rm .windsurf/todos/*",
        "xargs *"
      ],
      "prompt": [
        "gh pr create *",
        "gh pr edit *",
        "gh pr comment *",
        "gh pr checkout *",
        "gh pr ready *",
        "gh pr close *",
        "gh pr reopen *",
        "gh issue create *",
        "gh run rerun *",
        "gh run cancel *",
        "gh workflow run *",
        "gh api *",
        "vercel deploy *",
        "vercel promote *",
        "vercel rollback *",
        "vercel rm *",
        "doppler *",
        "chmod *",
        "open *",
        "rm *.md",
        "rm .windsurf/*",
        "rm .claude/*",
        "pnpm add *",
        "pnpm remove *",
        "pnpm update *",
        "git checkout *",
        "git switch *",
        "git add *",
        "git restore *",
        "git stash *",
        "git fetch *",
        "git rm *",
        "git mv *",
        "git clean *",
        "git cherry-pick *",
        "git revert *",
        "git reset *",
        "git commit *",
        "git push *",
        "git pull *",
        "git rebase *",
        "git merge *",
        "kill *",
        "pkill *",
        "bash ${WORKSPACE}/.claude/hooks/*",
        "bash ${WORKSPACE}/.windsurf/scripts/*",
        "gh pr merge *",
        "gh pr update-branch *",
        "gh pr review *",
        "python3 *",
        "docker *",
        "psql *",
        "pnpm drizzle:migrate *",
        "pnpm drizzle:push *",
        "pnpm drizzle:generate *",
        "pnpm db:generate *",
        "pnpm drizzle-kit push *",
        "brew install *",
        "nvm install *"
      ],
      "deny": [
        "rm -rf /*",
        "rm -rf .git",
        "shred *",
        "dd if=* of=*",
        "mkfs.* *",
        "chmod 777 -R /*",
        "chown -R * /*",
        "sudo *",
        "apt *",
        "apt-get *",
        "yum *",
        "dnf *",
        "docker system prune -a*",
        "docker volume rm *",
        "kill -9 *"
      ]
    }
  },
  "guardrails": {
    "maxFilesPerEdit": 50,
    "maxBytesPerEdit": 1048576,
    "requireReviewOnBinaryChanges": true,
    "requireReviewOnConfigFiles": [
      "**/package.json",
      "**/pnpm-lock.yaml",
      "**/yarn.lock",
      "**/Dockerfile",
      "**/docker-compose*.yml",
      "**/.env*",
      "**/prisma/schema.prisma",
      "**/next.config.*",
      "**/vercel.*.json",
      "**/posthog.*",
      "**/sentry.*"
    ]
  },
  "defaults": {
    "onAllowed": "auto",
    "onPrompt": "ask",
    "onDenied": "block",
    "sessionBehavior": {
      "rememberChoicesForSession": true,
      "askOncePerExactCommand": true
    }
  }
}
