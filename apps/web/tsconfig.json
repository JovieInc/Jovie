{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "tsBuildInfoFile": ".cache/tsbuildinfo",
    "types": ["./tests/types/vitest", "./tests/types/jest-dom"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/atoms/*": ["./components/atoms/*"],
      "@/molecules/*": ["./components/molecules/*"],
      "@/organisms/*": ["./components/organisms/*"],
      "@/app/*": ["./app/app/*", "./app/*"],
      "@/lib/*": ["./lib/*"],
      "@/types/*": ["./types/*"],
      "@jovie/ui": ["../../packages/ui"],
      "@jovie/ui/*": ["../../packages/ui/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "tests/types/**/*.d.ts",
    ".next/dev/types/**/*.ts",
    ".next/dev/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "supabase/functions",
    ".next/dev/**/*",
    // Next.js auto-generated validator file is noisy/unstable (unused @ts-expect-error); exclude for consistent typecheck.
    ".next/types/validator.ts",
    "vitest.config.ts",
    "vitest.config.fast.ts",
    "**/*.stories.*",
    "storybook-static"
  ]
}
