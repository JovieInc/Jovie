{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "url": ["https://jov.ie/", "https://jov.ie/tim"]
    },
    "assert": {
      "assertions": {
        "interactive": [
          "error",
          {
            "maxNumericValue": 1500
          }
        ],
        "first-contentful-paint": [
          "error",
          {
            "maxNumericValue": 2000
          }
        ],
        "largest-contentful-paint": [
          "error",
          {
            "maxNumericValue": 2500
          }
        ],
        "cumulative-layout-shift": [
          "error",
          {
            "maxNumericValue": 0.1
          }
        ],
        "total-blocking-time": [
          "error",
          {
            "maxNumericValue": 300
          }
        ]
      },
      "assertMatrix": [
        {
          "matchingUrlPattern": "^https://jov\\.ie/$",
          "assertions": {
            "categories:performance": [
              "error",
              {
                "minScore": 0.9
              }
            ],
            "categories:accessibility": [
              "error",
              {
                "minScore": 0.98
              }
            ]
          }
        },
        {
          "matchingUrlPattern": "^https://jov\\.ie/tim/?$",
          "assertions": {
            "categories:performance": [
              "error",
              {
                "minScore": 0.85
              }
            ],
            "categories:accessibility": [
              "error",
              {
                "minScore": 0.98
              }
            ]
          }
        }
      ]
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
